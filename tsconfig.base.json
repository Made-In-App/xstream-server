{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@xstream/core": ["packages/core/src/index.ts"],
      "@xstream/core/*": ["packages/core/src/*"]
    }
  }
}
