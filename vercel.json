{
  "version": 2,
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/player_api.php",
      "dest": "/api/player-api"
    },
    {
      "src": "/get.php",
      "dest": "/api/get-playlist"
    },
    {
      "src": "/refresh-cache",
      "dest": "/api/refresh-cache"
    },
    {
      "src": "/purge",
      "dest": "/api/purge"
    },
    {
      "src": "/purge/",
      "dest": "/api/purge"
    },
    {
      "src": "/xmltv.php",
      "dest": "/api/xmltv"
    },
    {
      "src": "/stream.php",
      "dest": "/api/stream"
    },
    {
      "src": "/live/(.*)",
      "dest": "/api/stream-redirect?type=live&path=$1"
    },
    {
      "src": "/movie/(.*)",
      "dest": "/api/stream-redirect?type=movie&path=$1"
    },
    {
      "src": "/series/(.*)",
      "dest": "/api/stream-redirect?type=series&path=$1"
    },
    {
      "src": "/([^/]+)/([^/]+)/([^/]+)",
      "dest": "/api/stream-redirect?type=live&path=$1/$2/$3"
    },
    {
      "src": "/",
      "dest": "/api/index"
    }
  ]
}

